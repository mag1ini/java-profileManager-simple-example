<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSilver"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/inputProfile"
        android:textColor="@color/colorBlack"
        android:textSize="30sp" />


    <LinearLayout
        android:id="@+id/lnrlt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_profile"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="50dp"
        android:background="@color/colorSilver"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/firstname"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/edt_firstname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textCursorDrawable="@null"
            android:backgroundTint="@color/colorDeepOrange"/>
        <TextView
            android:id="@+id/tv_feedbackMessage_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textColor="@color/colorRed"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/lastname"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/edt_lastname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textCursorDrawable="@null"
            android:backgroundTint="@color/colorDeepOrange"/>
        <TextView
            android:id="@+id/tv_feedbackMessage_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textColor="@color/colorRed"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/phone"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textCursorDrawable="@null"
            android:backgroundTint="@color/colorDeepOrange"/>
        <TextView
            android:id="@+id/tv_feedbackMessage_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textColor="@color/colorRed"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/city"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner_city"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textCursorDrawable="@null"
            android:entries="@array/cities"
            android:backgroundTint="@color/colorDeepOrange"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorWhite"
            android:padding="20dp"
            android:text="@string/save"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorWhite"
            android:padding="20dp"
            android:text="@string/back"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />


    </LinearLayout>

</RelativeLayout>